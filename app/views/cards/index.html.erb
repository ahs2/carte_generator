<div class="w-full px-40 p3-5 relative">
  <div class="overflow-x-auto">
    <h1 class="font-bold text-4xl my-5">Listes import√©s</h1>
    <turbo-frame id="cards">
      <table class="min-w-full border divide-y">
        <thead class='bg-indigo-600 text-white'>
          <tr>
            <th class='p-1'>#</th>
            <th class="p-1 text-left border">Code</th>
            <th class="p-1 text-left border">Nom</th>
            <th class="p-1 text-left border">Liens</th>
            <th class="p-1 text-center border">#</th>
          </tr>
        </thead>
        <tbody>
          <% @cards.each_with_index do |card, index| %>
            <tr>
              <td class='p-1 text-center border bg-gray-100'><%= index + 1 %></td>
              <td class="p-1 whitespace-nowrap border"><%= card.code %></td>
              <td class="p-1 whitespace-nowrap border"><%= card.fullname %></td>
              <td class="p-1 whitespace-nowrap border text-indigo-700"><%= card.link %></td>
              <td class="p-1 border flex items-center justify-center">
                <div class='flex gap-2 items-center'>
                  <%= link_to  card_path(card, format: :pdf), target: "_blank" do %>
                    <%= image_tag "print.gif", width: 40 %>
                  <% end %>
                  <%= button_to 'x', card_path(card), method: :delete, class: "text-sm bg-red-500 text-red-100 py-1 px-2 rounded shadow" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </turbo-frame>
    <div class="mt-2 float-right">
      <%== pagy_nav(@pagy) %> 
    </div>
  </div>
  <div class='fixed bottom-10 right-10 rounded-full border border-pink-500 p-3 shadow-lg'>
    <%= link_to root_path do %>
    <%= image_tag "home.gif", width: 60 %>
    <% end %>
  </div>
</div>
